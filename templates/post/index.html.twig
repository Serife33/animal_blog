{% extends 'base.html.twig' %}

{% block body %}

<h1>Tous les posts du blog</h1>
    
    <button><a href="{{ path('app_post_create')}}">Ajouter un post</a></button>
    <button> <a href="{{ path('app_theme_create')}}">Ajouter un theme</a></button>

{% for post in posts %}
    <a href="{{ path('app_post_detail', {'id' : post.id}) }}"><h2>{{post.title}}</h2></a>
    <p>Th√©me : {{post.theme.name}}</p>
    <p>{{post.summary}}</p>
    <img src="{{ asset('upload/post/' ~ post.image) }}" alt="">
    
    <button><a href="{{ path('app_post_detail', {'id' : post.id}) }}">En savoir plus </a></button>
    <button><a href="{{ path('app_post_update', {'id' : post.id}) }}">Modifier </a></button>
    <button>{% include "post/_form_delete.html.twig" %}</button>
{% endfor %}


{% endblock %}


